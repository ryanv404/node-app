    <style>
      .list-inline-item a {
      position: relative;
      color: green;
      text-decoration: none;
      }

      .list-inline-item a:hover {
        color: green;
      }

      .list-inline-item a::before {
        content: "";
        position: absolute;
        display: block;
        width: 100%;
        height: 2px;
        bottom: 0;
        left: 0;
        background-color: green;
        transform: scaleX(0);
        transition: transform 0.3s ease;
      }

      .list-inline-item a:hover::before {
        transform: scaleX(1);
      }

      .dropdown-toggle:focus {
        box-shadow: none;
      }
    </style>
