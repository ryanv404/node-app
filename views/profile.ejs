<%- include("head", {title: title}); -%>
<%- include("partials/navbar") -%>
<%- include("partials/messages") -%>

<div class="container-sm" style="margin-top: 100px;">
  <h1 class="display-3 text-center my-5">
    Welcome to <span class="text-capitalize"><%= user.firstName %></span>'s profile!
  </h1>
  <p class="lead text-center my-5">This is your profile.</p>
  <div class="d-flex flex-column">
    <div class="row justify-content-evenly">
      <div class="col-5 fw-bold text-end">Profile Pic</div>
      <div class="col-5">[Pic]</div>
    </div>
    <div class="row justify-content-evenly">
      <div class="col-5 fw-bold text-end">First Name</div>
      <div class="col-5 text-capitalize"><%= user.firstName %></div>
    </div>
    <div class="row justify-content-evenly">
      <div class="col-5 fw-bold text-end">Last Name</div>
      <div class="col-5 text-capitalize"><%= user.lastName %></div>
    </div>
    <div class="row justify-content-evenly">
      <div class="col-5 fw-bold text-end">Username</div>
      <div class="col-5"><%= user.username %></div>
    </div>
    <div class="row justify-content-evenly">
      <div class="col-5 fw-bold text-end">Email</div>
      <div class="col-5"><%= user.email %></div>
    </div>
    <div class="row justify-content-evenly">
      <div class="col-5 fw-bold text-end">Verification Status</div>
      <% if (user.isAccountVerified) { %>
        <div class="col-5 text-success">Verified</div>
      <% } else { %>
        <div class="col-5 text-danger">Not Verified</div>
      <% } %>
    </div>
    <div class="row justify-content-evenly mb-5">
      <div class="col-5 fw-bold text-end">Creation Date</div>
      <div class="col-5"><%= user.createdAt %></div>
    </div>
  </div>
  <div class="w-25 mx-auto mb-5 text-center">
    <div class="d-flex flex-column">
      <a href="/users/<%= user.username %>/delete/profile" class="text-decoration-none">Update profile</a>
      <a href="/users/reset" class="text-decoration-none mb-3">Reset password</a>
      <a href="/dashboard" class="text-decoration-none">Dashboard</a>
      <a href="/logout" class="mt-3 text-danger text-decoration-none">Log out</a>
      <a href="/users/<%= user.username %>/delete/profile" class="mt-5 text-decoration-none btn btn-danger">Delete profile</a>
    </div>
  </div>
</div>

  </body>
</html>